         <children>
            <Label text="Your total sum of expenses">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Text fx:id="totalSum" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font size="16.0" />
               </font>
            </Text>
         </children>
      </VBox>
      <Button fx:id="backBtn" layoutX="528.0" layoutY="14.0" mnemonicParsing="false" onAction="#retToEventOverview" text="return" />
